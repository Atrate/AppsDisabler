<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainMyAppsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/EmptyViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textViewAllApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_view_all"
                android:textColor="#fff"
                android:contentDescription="@string/add" />

            <GridLayout
                android:id="@+id/gridTitlesMyApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="11"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

            </GridLayout>
            <ImageView
                android:id="@+id/textViewAddTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_add"
                android:textColor="#fff"
                android:contentDescription="@string/add" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <GridLayout
                android:id="@+id/gridMyApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:paddingBottom="50dp"
                android:padding="20dp" />

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonLauncherMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_dots"
        android:backgroundTint="@color/colorAppSelected"
        app:tint="@color/design_default_color_on_primary"
        app:fabSize="mini"
        android:contentDescription="@string/config" />

</LinearLayout>